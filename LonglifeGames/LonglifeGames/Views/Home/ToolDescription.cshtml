@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section id="preview">
        <div class="container-fluid" style="padding:0px">
            <div class="row no-gutters hide-overflow">
                <div class="col-lg-12 full-screen-height">
                    <img src="@Url.Content("~/Views/Images/pexels-photo-410635.jpeg")" class="main-image-prefs"/>
                </div>
            </div>
        </div>
    </section>
    <section id="about">
        <div class="container-fluid" style="padding:0px">
            <div class="row no-gutters full-screen-height">
                <div class="col-lg-5 black-bg layer-3">
                </div>
                <div class="col-lg-7 to-hide">
                    <img src="@Url.Content("~/Views/Images/pexels-photo-267350.jpeg")" class="main-image-prefs" />
                </div>
            </div>
        </div>
    </section>
    <section id="features">
        <div class="container-fluid" style="padding:0px">
            <div class="row no-gutters full-screen-height">
                <div class="col-lg-8">
                    <span class="cover dark-overlay hide-on-lg"></span>
                    <img src="@Url.Content("~/Views/Images/pexels-photo-833337.jpeg")" class="main-image-prefs blur-bg-sm" />
                </div>
                <div class="col-lg-4 black-bg to-hide">

                </div>
            </div>
        </div>
    </section>
    <section id="coming-soon">
        <div class="container-fluid" style="padding:0px">
            <div class="row no-gutters">
                <div class="col-lg-12 black-bg cooming-soon">

                </div>
            </div>
        </div>
    </section>
</main>
